{
    "manifest_version": 3,
    "name": "Freshdesk Ticket MultiTool for Tealium",
    "version": "3.2",
    "description": "MultiTool for Tealium Agents",
    "update_url": "https://lauraswp.github.io/scripts/update.xml",
    "background": {
        "service_worker": "background.js"
      },
      "content_scripts": [
        {
          "matches": [
            "*://*.freshdesk.com/a/tickets/*",
            "*://tealium.atlassian.net/*",
            "*://support.tealiumiq.com/*"
          ],
          "js": ["content_script.js"],
          "run_at": "document_idle"
        }
      ],
      "permissions": [
        "storage",
        "clipboardWrite",
        "tabs",
        "scripting"
      ],
      "host_permissions": [
        "*://tealium.atlassian.net/*"
      ]
  }
  